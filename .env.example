# ============================
# 数据库配置
# ============================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=dex_arbitrage
DB_MAX_CONNECTIONS=10

# ============================
# 以太坊 RPC 配置
# ============================
# Ethereum Mainnet
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key

# BSC Mainnet
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_WS_URL=wss://bsc-ws-node.nariox.org:443

# ============================
# 套利配置
# ============================
# 最大滑点 (0.05% = 0.0005)
MAX_SLIPPAGE=0.0005
# 最低利润阈值 (USD)
MIN_PROFIT_THRESHOLD=10.0
# 路径最大跳数
MAX_PATH_HOPS=3
# Gas 价格倍数 (用于加速交易)
GAS_PRICE_MULTIPLIER=1.2

# ============================
# 闪电贷配置
# ============================
# 闪电贷来源: uniswap_v3, uniswap_v4, aave, balancer
FLASH_LOAN_PROVIDER=uniswap_v3

# ============================
# MEV 保护
# ============================
# 是否使用 Flashbots 私有交易
USE_FLASHBOTS=false
FLASHBOTS_RPC_URL=https://relay.flashbots.net
# 是否同时使用公开 mempool 发送交易
# true = 同时通过 Flashbots 和公开 mempool 发送（Both 模式）
# false = 仅通过 Flashbots 或公开 mempool 发送（取决于 USE_FLASHBOTS）
USE_PUBLIC_MEMPOOL=false

# ============================
# 钱包配置
# ============================
# 私钥 (用于执行交易，请妥善保管)
PRIVATE_KEY=your_private_key_here

# ============================
# 合约地址
# ============================
# 自定义套利合约地址
ARBITRAGE_CONTRACT_ADDRESS=

# ============================
# 服务器配置
# ============================
SERVER_PORT=9530
SERVER_HOST=0.0.0.0

# ============================
# 日志配置
# ============================
RUST_LOG=info
LOG_FILE_PATH=./logs/dex_arbitrage.log
